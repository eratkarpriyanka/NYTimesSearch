<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.underarmour.nytimes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:name=".app.NYTimesSearchApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_news_icon_24dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_news_icon_24dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ArticleSearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.DetailedArticleActivity"></activity>
        <activity android:name=".activities.SearchFilterActivity"></activity>
    </application>

</manifest>